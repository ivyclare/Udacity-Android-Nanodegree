<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ivy.com.popularmoviesstage1.MovieDetailActivity">

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textAllCaps="true"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleDetail"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/posterDetail"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="@string/title"
                android:adjustViewBounds="true"
                android:src="@drawable/image" />

            <TextView
                android:text="@string/release_date"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/date"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".05"/>

            <TextView
                android:text=""
                android:id="@+id/relDateDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".05"/>

            <TextView
                android:text="@string/user_rate"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/user_rate"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".05"/>

            <TextView
                android:id="@+id/voteAvgDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".05"/>

            <TextView
                android:text="@string/synopsis"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/synopsis"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".05"/>
            <TextView
                android:text=""
                android:id="@+id/overviewDetail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".05"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
