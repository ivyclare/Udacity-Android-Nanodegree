<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="asteroid"
            type="com.udacity.asteroidradar.Asteroid" />
        <variable
            name="onAsteroidClickedListener"
            type="com.udacity.asteroidradar.adapter.OnAsteroidClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/app_background"
        android:layout_width="match_parent"
        android:onClick="@{()-> onAsteroidClickedListener.onAsteroidClicked(asteroid)}"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:text="@{asteroid.codename}"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                tools:text="Asteroid Name" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="8dp"
                android:text="@{asteroid.closeApproachDate}"
                tools:text="Asteroid Approach Date" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/img_content"
                app:statusIcon="@{asteroid.potentiallyHazardous}"
                android:layout_alignParentEnd="true"
                tools:src="@drawable/ic_status_normal"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>